<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/type_text"
        style="@style/caption_accent"
        android:textColor="@color/Text_Status_Accent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/my_assets_icon"
        app:layout_constraintBottom_toBottomOf="@id/type_text"
        app:layout_constraintTop_toTopOf="@id/type_text"
        app:layout_constraintStart_toEndOf="@id/type_text"
        android:id="@+id/type_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/date_text"
        style="@style/caption_default"
        android:textColor="@color/Text_Default_Quaternary"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/Text_Default_Primary"
        android:layout_marginBottom="12dp"
        android:id="@+id/content_text"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:lines="2"
        style="@style/body_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/date_text"
        app:layout_constraintStart_toStartOf="@id/type_text"
        app:layout_constraintTop_toBottomOf="@id/type_text" />


</androidx.constraintlayout.widget.ConstraintLayout>